<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_ingredients"
        style="@style/ViewPaddingLR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_splitter_block"
        style="@style/ViewMarginTop"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:contentDescription="@string/desc_block_splitter"
        android:src="@drawable/bg_line_rectangle_one"
        app:layout_constraintTop_toBottomOf="@id/rv_ingredients"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_steps"
        style="@style/ViewPaddingLR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_splitter_block"/>
</android.support.constraint.ConstraintLayout>